{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthdate</th>
                <th>Gender</th>
                <th>School</th>
                <th>Class</th>
                <th>Parish</th>
                <th>Usertype</th>
                <th>Iq</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.school }}</td>
                <td>{{ entity.class }}</td>
                <td>{{ entity.parish }}</td>
                <td>{{ entity.userType }}</td>
                <td>{{ entity.iQ }}</td>
                <td>{{ entity.password }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="button" href="{{ path('user_new') }}">
                Create a new entry
            </a>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <a class="link" href="{{ path('logout') }}">Logout {{ app.user.username }} </a>
            {% else %}
                <a class="link" href="{{ path('login_form') }}">Login</a>
            {% endif %}
        </li>
    </ul>
    {% endblock %}
